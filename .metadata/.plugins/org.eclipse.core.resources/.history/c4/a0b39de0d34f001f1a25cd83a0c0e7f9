package com.apro.adapter.model;

import java.util.ArrayList;
import java.util.List;

public class ShoppingCart {
	List<IItems> itemList;

	public ShoppingCart() {
		this.itemList = new ArrayList<IItems>();
	}

	public ShoppingCart(List<IItems> itemList) {
		super();
		this.itemList = itemList;
	}

	public List<IItems> getItemList() {
		return itemList;
	}

	public void addItem(IItems item) {
				itemList.add(item);
	}
	
	public void displayItems() {
		itemList.forEach((item)->System.out.println("Name : " + item.getName() + " , Price : " +item.getPrice()));
	}
	
	public double getTotalPrice() {
		return itemList
				.stream()
				.mapToDouble((item)->item.getPrice())
				.reduce(0,(price1,price2)->price1+price2); 
	}

	public void addItemList(List<IItems> items) {
		// TODO Auto-generated method stub
		itemList.addAll(items);
		
	}

}
